<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    app:cardBackgroundColor="@color/cell_background">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin">

        <TextView
            android:id="@+id/nurse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/standard_margin"
            android:textColor="@color/white"
            tools:text="John Doe"/>
        <TextView
            android:id="@+id/early_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/nurse_name"
            android:layout_centerHorizontal="true"
            tools:text="Early Shift 99"/>
        <TextView
            android:id="@+id/late_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/early_shift"
            android:layout_centerHorizontal="true"
            tools:text="Late Shift 99"/>
        <TextView
            android:id="@+id/night_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/late_shift"
            android:layout_centerHorizontal="true"
            tools:text="Night Shift 99"/>
        <TextView
            android:id="@+id/free_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/night_shift"
            android:layout_centerHorizontal="true"
            tools:text="Free 99"/>
        <TextView
            android:id="@+id/holiday_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/free_shift"
            android:layout_centerHorizontal="true"
            tools:text="Holiday 99"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>