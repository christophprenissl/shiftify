<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="@string/early_shift"
    android:layout_width="@dimen/card_shift_dimens"
    android:layout_height="@dimen/card_shift_dimens"
    android:layout_margin="@dimen/card_shift_margin"
    app:cardBackgroundColor="@color/shift_early">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/shift_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/shift_font_color"
            tools:text="@string/early_shift"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>