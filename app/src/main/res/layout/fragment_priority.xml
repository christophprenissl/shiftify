<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.nurse.PriorityFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/standard_margin"
        android:textAlignment="center"
        android:layout_weight="1.3"
        tools:text="Day DD, YEAR YYYY" />

    <LinearLayout
        android:id="@+id/priority_first_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1.2"
        android:background="@color/purple_200">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/early_shift_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/shift_early"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/early_shift_card_label"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/priority_second_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1.2"
        android:background="@color/purple_500"/>

    <LinearLayout
        android:id="@+id/priority_third_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1.2"
        android:background="@color/purple_700"/>

    <LinearLayout
        android:id="@+id/priority_fourth_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1.2"
        android:background="@color/black"/>



</LinearLayout>
